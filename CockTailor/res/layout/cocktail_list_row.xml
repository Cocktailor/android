<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="wrap_content"
    android:layout_height="fill_parent"
    android:orientation="horizontal" >

    <ImageView
        android:id="@+id/child_thumbnail"
        android:layout_width="100sp"
        android:layout_height="100sp"
        android:scaleType="fitCenter"
        android:src="@drawable/cocktailor_x1" />

    <TextView
        android:id="@+id/tv_child"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="140dp"
        android:minWidth="140dp"
        android:textColor="#665959"
        android:text="@string/textview_test"
        android:textSize="18sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="4dp"/>
    
    <TextView
        android:id="@+id/price"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="18sp"
        android:textColor="#665959"
        android:text="\2000"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"/>
    
    <ImageButton
        android:id="@+id/menu_minus_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="6dp"/>

    
    <TextView
        android:id="@+id/counting"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="0"
        android:textColor="#665959"
        android:textSize="20sp"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"/>
    
    <ImageButton
        android:id="@+id/menu_add_button1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#00ff0000"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="2dp"/>

    


</LinearLayout>
